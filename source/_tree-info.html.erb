<style>

  .img-fluid {
    max-width: 90%;
    height: auto;
    margin: 15px 5%;
  }

  h3 {
    font-size: 1rem;
    font-weight: 600;
  }

</style>


<div class="container-fluid my-2 py-2">
  <div class="row"> 
    <div class="col-sm-8 col-md-4"></div> <!-- Side column-->
    <div class="col-sm-8 col-lg-8 my-2 py-2">
      <div class="card mt-4 col-sm-2 col-lg-6" style="width: auto;box-shadow:5px 5px 5px 5px #6c6c6c;">
      <div>
        <%= image_tag current_page.data.img_path, class:'card-image-top rounded img-fluid', alt: current_page.data.img_alt %>
      </div>
      <div>
        <div class="card-body text-center">
          <h5 class="card-title" style="text-transform:Capitalize;"><%= current_page.data.tree_name %></h5>
          <blockquote class="blockquote mb-0 text-center">
            <footer class="blockquote-footer">
              <p class="card-text" style="color:#6c6c6c;font-style:italic;text-transform:Capitalize;"><%= current_page.data.latin_name %>
              <p class="card-text" style="color:#6c6c6c;font-style:italic;text-transform:Capitalize;">Date planted: <%= current_page.data.date_planted %></p>
              <p class="card-text" style="color:#6c6c6c;font-style:italic;text-transform:Capitalize;">Origin: <%= current_page.data.country_of_origin %></p>
            </footer>
          </blockquote>
          <hr>
          <h3>Features: </h3><p class="card-text"><br><%= current_page.data.features %></p><hr>
          <h3>Growing conditions: </h3><p class="card-text"><br><%= current_page.data.growing_conditions %></p><hr>
          <h3>Did you know?</h3><p class="card-text"><br><%= current_page.data.did_you_know %></p><hr>
        </div>
      </div>
    </div>
  </div>
  <div class="row"><br></div>
</div>
